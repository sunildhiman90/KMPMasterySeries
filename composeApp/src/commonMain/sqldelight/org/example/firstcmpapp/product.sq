CREATE TABLE Product (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    price REAL NOT NULL
);

selectAll:
SELECT * FROM Product;

selectProductById:
SELECT * FROM Product WHERE id = ?;

insertProduct:
INSERT INTO Product (name, price) VALUES (?, ?);

deleteProductById:
DELETE FROM Product WHERE id = ?;

searchProduct:
SELECT * FROM Product WHERE name LIKE ('%' || :name || '%');
